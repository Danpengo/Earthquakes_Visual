{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"title": "Amount of different types of disasters",
"repeat": ["Total", "Epidemic", "Drought", "Wildfire", "Earthquake", "Volcanic activity","Flood","Storm"],
"columns": 4,
"spec": {
"projection": {
"type": "equalEarth"
},
"width": 400,
"height": 300,
"layer": [
{
"data": {
"url":
      "https://raw.githubusercontent.com/Danpengo/HW9/main/110m.topojson",
"format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
},
"transform": [
{
"calculate": "'No data for ' + datum.properties.NAME",
"as": "note"
}
],
"mark": {
"type": "geoshape",
"fill": "#d4d2d2",
"stroke": "white",
"strokeWidth": 1
},
"encoding": {"tooltip": {"field": "note"}}
},
{
    "data": {
        "url":"https://raw.githubusercontent.com/Danpengo/HW9/main/110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        
        "projection": {"type": "equalEarth"},   

        
            "transform": [
        
                  {
                  "lookup": "properties.NAME",
                  "from": {
                  "data": {
                  "url": "https://raw.githubusercontent.com/Danpengo/FIT3179_ASGN2/main/data/Map2.3.csv"
                  },
                  "key": "Country",
                  "fields": ["Total", "Epidemic", "Drought", "Wildfire", "Earthquake", "Volcanic activity","Flood","Storm"]
                  }
                  }
                  ],
        
        "mark": {"type": "geoshape", "tooltip": {"content": "data"}},
        
        "encoding": {
        "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "Country"},
              {"field": {"repeat": "repeat"}}
              ],
        "color": {"field": {"repeat": "repeat"}, "type": "quantitative","scale":{"type":"sqrt","scheme": "reds","domain": [0, 1100]}}
        }
    },
    {
        "data": {
        "values": [
        {
        "Total": "All distasters",
        "Epidemic": "Epidemics",
        "Drought": "Droughts",
        "Wildfire": "Wildfires",
        "Earthquake": "Earthquakes",
        "Volcanic activity": "Volcanic disasters",
        "Flood": "Floods",
        "Storm": "Storms"
        }
        ]
        },
        "mark": {
        "type": "text",
        "align": "right",
        "baseline": "bottom",
        "x": "width",
        "y": 0
        },
        "encoding": {"text": {"field": {"repeat": "repeat"}}}
        }
    ]
},
"config": {}
}
