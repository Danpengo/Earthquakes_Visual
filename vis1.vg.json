{
      "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

      "title": "Deaths per Disaster Type",
      "width": "container",
      "height": 400,
      "data": {
      "url": "https://raw.githubusercontent.com/Danpengo/FIT3179_ASGN2/main/data/Vis1.csv"
      },
     
      
      
     
      "params": [
           {
           "name": "Continent_selection",
           "bind": {
           "input": "select",
           "options": [
           null,
           "Americas",
           "Europe",
           "Africa",
           "Asia",
           "Oceania"
           ],
           "labels":[
           "Show All",
           "Americas",
           "Europe",
           "Africa",
           "Asia",
           "Oceania"
           ],
           "name": "Continent Selection:    "
           }
           },
            {
                 "name": "Year_selection",
                 "value": 2020,
                 "bind": {
                 "input": "range",
                 "min": 1900,
                 "max": 2020,
                 "step": 1,
                 "name": "Year Selection: "
                 }
                 }   
           ],
          
     "transform":[
           {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}
     
     ],
     
     
      "mark": {"type": "bar", "tooltip": {"content": "data"}},
      
      "encoding": {
       "y":{
         "aggregate": "sum",
         "field": "Total Deaths",
         "type": "quantitative",
         "scale":{"type":"log","domain": [1, 20000000]}

       },
       "x":{
         "field": "Disaster Type",
         "type": "nominal",
         "sort": "-y"
     
       },
       "color": {"field": "Region","aggregate": "count","scale":{"scheme": "oranges","reverse":true},"legend":{"title":"Number of Disasters"}},
       "tooltip": [
             {"field": "Total Deaths", "aggregate": "sum","type": "nominal"},
             {"field": "Region", "aggregate": "count", "type": "quantitative"}
             ]
      }
     
}
